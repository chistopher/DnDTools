<%= form_with(model: @quest, local: true) do |form| %>

  <% if @quest.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@quest.errors.count, "error") %> prohibited
        this quest from being saved:
      </h2>
      <ul>
        <% @quest.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :Description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
  <%= form.label :npc_id %><br />
  <% if admin? %>
    <%= form.collection_select :npc_id, Npc.order(:name), :id, :name, include_blank: true %>
  <% else %>
    <%= form.collection_select :npc_id, Npc.where(discovered: true).order(:name), :id, :name, include_blank: true %>
  <% end %>
  </p>

  <% if admin? %>
    <p>
      <%= form.check_box :discovered %>
      <%= form.label :Discovered %>
    </p>
  <% end %>

  <p>
    <%= form.submit %>
  </p>

<% end %>
